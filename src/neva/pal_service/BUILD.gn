import("//neva/neva.gni")
import("//neva/pal_service/pal_service.gni")
import("//services/service_manager/public/cpp/service_executable.gni")

component("pal_service") {
  sources = [
    "memorymanager.cc",
    "memorymanager.h",
    "memorymanager_delegate.h",
    "network_error_page_controller.cc",
    "network_error_page_controller.h",
    "network_error_page_controller_delegate.h",
    "neva_pal_manifest.cc",
    "neva_pal_manifest.h",
    "os_crypt.cc",
    "os_crypt.h",
    "os_crypt_delegate.h",
    "pal_platform_factory.cc",
    "pal_platform_factory.h",
    "pal_service.cc",
    "pal_service.h",
    "platform_application_delegate.h",
    "platform_system_delegate.h",
    "platform_system_handler.cc",
    "platform_system_handler.h",
    "platform_system_handler_extension.h",
    "sample.cc",
    "sample.h",
    "system_servicebridge.cc",
    "system_servicebridge.h",
    "system_servicebridge_delegate.h",
  ]

  deps = [
    "//base",
    "//neva/emulator",
  ]

  public_deps = [
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/system",
    "//neva/pal_service/public/mojom",
    "//services/service_manager/public/cpp",
    "//services/service_manager/public/mojom",
  ]

  defines = pal_service_defines

  if (is_webos) {
    deps += [
      "//neva/pal_service/webos:pal_service_webos",
    ]
  } else {
    deps += [
      "//neva/pal_service/pc:pal_service_pc",
    ]
  }
}
